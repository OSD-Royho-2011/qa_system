<% provide(:title, t('titles.signup')) %>
<% provide(:form_msg, t('messages.enter_info')) %>
<%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: @user %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :required => true, class: 'form-control mb-0', placeholder: t('form.full_name') %>
    </div>
    <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, :required => true, class: 'form-control mb-0', placeholder: t('form.email') %>
    </div>
    <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, :required => true, class: 'form-control mb-0', placeholder: t('form.password') %>
    </div>
    <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, :required => true, class: 'form-control mb-0', placeholder: t('form.confirm_password') %>
    </div>
    <div class="d-inline-block w-100">
        <div class="custom-control custom-checkbox d-inline-block mt-2 pt-1">
            <span class="dark-color d-inline-block line-height-2"><%= t('form.already_have_account') %> <%= link_to t('titles.login'), login_path %></span>
        </div>
        <%= f.submit t('titles.signup'), class: "btn btn-primary float-right" %>
    </div>
<% end %>
<% parent_layout "layouts/base_form" %>
