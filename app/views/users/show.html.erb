<% provide(:title, 'UiCA') %>
<div class="row">
    <div class="col-sm-12">
        <div class="iq-card">
            <div class="iq-card-body profile-page p-0">
                <div class="profile-header">
                    <div class="cover-container">
                        <img src="<%= image_url('page-img/profile-bg1.jpg') %>" alt="profile-bg" class="rounded img-fluid">
                    </div>
                    <div class="user-detail text-center mb-3">
                        <div class="profile-img">
                            <img src="<%= image_url('user/11.png') %>" alt="profile-img" class="avatar-130 img-fluid" />
                        </div>
                        <div class="profile-detail">
                            <h3 class="">UiCA</h3>
                        </div>
                    </div>
                    <div class="profile-info p-4 d-flex align-items-center justify-content-between position-relative">
                        <div class="social-links"></div>
                        <div class="social-info">
                            <ul class="social-data-block d-flex align-items-center justify-content-between list-inline p-0 m-0">
                                <li class="text-center pl-3">
                                    <h6><%= t('titles.question') %></h6>
                                    <p class="mb-0">20</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="iq-card">
            <div class="iq-card-body p-0">
                <div class="user-tabing">
                    <ul class="nav nav-pills d-flex align-items-center justify-content-center profile-feed-items p-0 m-0">
                        <li class="col-sm-3 p-0">
                            <a class="nav-link active" data-toggle="pill" href="#timeline"><%= t('titles.timeline') %></a>
                        </li>
                        <li class="col-sm-3 p-0">
                            <a class="nav-link" data-toggle="pill" href="#about"><%= t('titles.about') %></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="tab-content">
            <div class="tab-pane fade active show" id="timeline" role="tabpanel">
                <%= render 'question_list' %>
            </div>
            <div class="tab-pane fade" id="about" role="tabpanel">
                <%= render 'info' %>
            </div>
        </div>
    </div>
</div>
<% parent_layout "layouts/base_layout" %>
