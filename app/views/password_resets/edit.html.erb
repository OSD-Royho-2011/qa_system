<% provide(:title, t('mailer.reset_psw')) %>
<% provide(:form_msg, t('messages.recover_psw_msg')) %>
<%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
    <%= render 'shared/error_messages', object: @user %>
    <%= hidden_field_tag :email, @user.email %>
    <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, :required => true, class: 'form-control mb-0', placeholder: t('form.password') %>
    </div>
    <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, :required => true, class: 'form-control mb-0', placeholder: t('form.confirm_password') %>
    </div>
    <div class="d-inline-block w-100">
        <%= f.submit t('titles.reset_password'), class: "btn btn-primary float-right" %>
    </div>
<% end %>
<% parent_layout "layouts/base_form" %>
