<div class="iq-top-navbar">
    <div class="iq-navbar-custom">
        <nav class="navbar navbar-expand-lg navbar-light p-0">
            <div class="iq-navbar-logo d-flex justify-content-between">
                <a href="<%= root_path %>">
                    <span>Q&A System</span>
                </a>
                <div class="iq-menu-bt align-self-center">
                    <div class="wrapper-menu">
                        <div class="main-circle"><i class="fas fa-bars"></i></div>
                    </div>
                </div>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"  aria-label="Toggle navigation">
                <i class="fas fa-caret-square-down"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto navbar-list">
                    <li class="mode-title">
                        <%= t('titles.anonymous') %>
                    </li>
                    <li class="switch-mode">
                        <%= render 'layouts/switch' %>
                    </li>
                    <li>
                        <a href="<%= profile_path %>" class="iq-waves-effect d-flex align-items-center">
                            <img src="<%= image_url('user/1.jpg') %>" class="img-fluid rounded-circle mr-3" alt="user">
                            <div class="caption">
                                <h6 class="mb-0 line-height"><%= current_user.name %></h6>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="<%= root_path %>" class="iq-waves-effect d-flex align-items-center">
                            <i class="fas fa-compass"></i>
                        </a>
                    </li>
                </ul>
                <ul class="navbar-list">
                    <li>
                        <a href="javascript:void();" class="search-toggle iq-waves-effect d-flex align-items-center">
                            <i class="fas fa-caret-down"></i>
                        </a>
                        <div class="iq-sub-dropdown iq-user-dropdown">
                            <div class="iq-card shadow-none m-0">
                                <div class="iq-card-body p-0 ">
                                    <div class="bg-primary p-3 line-height">
                                        <h5 class="mb-0 text-white line-height"><%= t('titles.hello') %> UiCA</h5>
                                    </div>
                                    <a href="<%= profile_path %>" class="iq-sub-card iq-bg-primary-hover">
                                        <div class="media align-items-center">
                                            <div class="rounded iq-card-icon iq-bg-primary">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            <div class="media-body ml-3">
                                                <h6 class="mb-0 "><%= t('titles.view_profile') %></h6>
                                                <p class="mb-0 font-size-12"><%= t('titles.view_profile_msg') %></p>
                                            </div>
                                        </div>
                                    </a>
                                    <a href="<%= edit_path %>" class="iq-sub-card iq-bg-warning-hover">
                                        <div class="media align-items-center">
                                            <div class="rounded iq-card-icon iq-bg-warning">
                                                <i class="fas fa-user-edit"></i>
                                            </div>
                                            <div class="media-body ml-3">
                                                <h6 class="mb-0 "><%= t('titles.edit_profile') %></h6>
                                                <p class="mb-0 font-size-12"><%= t('titles.edit_profile_msg') %></p>
                                            </div>
                                        </div>
                                    </a>
                                    <div class="d-inline-block w-100 text-center p-3">
                                        <%= link_to logout_path, :method => :delete, :class => 'bg-primary iq-sign-btn' do %>
                                            <%= t('titles.signout') %>&nbsp;<i class="fas fa-sign-out-alt"></i>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</div>
