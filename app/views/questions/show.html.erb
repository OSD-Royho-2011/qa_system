<% provide(:title, t('titles.detail')) %>
<div class="row">
    <div class="col-sm-12">
        <%= render 'shared/flash_message' %>
        <div class="iq-card iq-card-block iq-card-stretch iq-card-height">
            <div class="iq-card-body">
                <div class="user-post-data">
                    <div class="d-flex flex-wrap">
                        <div class="media-support-user-img mr-3">
                            <img class="rounded-circle img-fluid" src="<%= @question.private_token.present? ? image_url('user/anonymous.jpg') : image_url('user/01.jpg') %>" alt="">
                        </div>
                        <div class="media-support-info mt-2">
                            <h5 class="mb-0 d-inline-block">
                                <% if @question.private_token.present? %>
                                    <a href="javascript: void(0);"><%= t('title.anonymous') %></a>
                                <% else %>
                                    <%= link_to @question.user.name, @question.user %>
                                <% end %>
                            </h5>
                            <p class="mb-0 d-inline-block"><%= t('messages.post_about') %>&nbsp;<%= @question.categories.pluck(:name).join('/') %></p>
                            <p class="mb-0 text-primary"><%= time_ago_in_words(@question.created_at) %> &nbsp;<%= t('messages.ago') %></p>
                        </div>
                        <% if is_owner(@question) && @question.status == 'waiting'  %>
                            <div class="iq-card-post-toolbar">
                                <div class="dropdown">
                                    <span class="dropdown-toggle" id="postdata-5" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" role="button">
                                        <i class="fas fa-ellipsis-h"></i>
                                    </span>
                                    <div class="dropdown-menu m-0 p-0" aria-labelledby="postdata-5">
                                        <%= link_to edit_question_path(@question), class: "dropdown-item p-3" do %>
                                            <div class="d-flex align-items-top">
                                                <div class="icon font-size-20"><i class="fas fa-edit"></i></div>
                                                <div class="data ml-2">
                                                    <h6><%= t('titles.edit') %></h6>
                                                    <p class="mb-0"><%= t('titles.edit_msg') %></p>
                                                </div>
                                            </div>
                                        <% end %>
                                        <%= link_to @question, method: :delete, class: "dropdown-item p-3" do %>
                                            <div class="d-flex align-items-top">
                                                <div class="icon font-size-20"><i class="fas fa-trash"></i></div>
                                                <div class="data ml-2">
                                                    <h6><%= t('titles.delete') %></h6>
                                                    <p class="mb-0"><%= t('titles.delete_msg') %></p>
                                                </div>
                                            </div>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
                <div class="mt-3">
                    <p><%= @question.content %></p>
                </div>
                <% if @question.image.attached? %>
                    <div class="user-post">
                        <%= image_tag @question.display_image, class: "img-fluid rounded w-100" %>
                    </div>
                <% end %>
                <div class="comment-area mt-3">
                    <%= render 'actions/action' %>
                    <hr>
                     <%= render 'comment' %>
                </div>
            </div>
        </div>
    </div>
</div>
<% parent_layout "layouts/base_layout" %>
