                    <div class="user-img">
                        <img src="<%= image_url('user/02.jpg') %>" alt="userimg" class="avatar-60 rounded-circle img-fluid">
                    </div>
                    <form class="post-text ml-3 w-100" action="javascript:void();">
                        <input type="text" class="form-control rounded" placeholder="What is your question?" style="border:none; overflow-wrap: break-word;word-wrap: break-word;hyphens: auto;">
                    </form>
                </div>
                <hr>
                <ul class="d-flex flex-wrap align-items-center list-inline m-0 p-0">
                    <li class="col-md-6 mb-3">
