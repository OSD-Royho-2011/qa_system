<% if comment.parent_id.nil? %>
    <li class="mb-2">
        <div class="row">
            <div class="col-md-0">
                <div class="user-img ml-3">
                    <img src="<%= comment.private_token.present? ? image_url('user/anonymous.jpg') : image_url('user/02.jpg') %>" alt="userimg" class="avatar-35 rounded-circle img-fluid">
                </div>
            </div>
            <div class="col-md-11">
                <div class="comment-data-block ml-3">
                    <% if comment.private_token.present? %>
                        <h6><%= t('title.anonymous') %></h6>
                    <% else %>
                        <h6><%= comment.user.name %></h6>
                    <% end %>
                    <p class="comment-content-area mb-0"><%= comment.content %></p>
                    <div class="d-flex flex-wrap align-items-center comment-activity">
                        <a href="javascript:void();" data-toggle="modal" data-target="#reply-comment-<%= comment.id %>"><%= t('titles.reply') %></a>
                        <div id="post-modal-data">
                            <%= render partial: 'comments/reply_form', locals: { comment: comment } %>
                        </div>
                        <% if is_owner(comment) %>
                            <a href="javascript:void();" data-toggle="modal" data-target="#edit-comment-<%= comment.id %>"><%= t('titles.edit') %></a>
                            <div id="post-modal-data">
                                <%= render partial: 'comments/edit', locals: { comment: comment } %>
                            </div>
                            <%= link_to comment, method: :delete, :remote => true do %>
                                <%= t('titles.delete') %>
                            <% end %>
                        <% end %>
                        <span><%= time_ago_in_words(comment.created_at) %>&nbsp;<%= t('messages.ago') %></span>
                    </div>
                </div>
                <div class="comment-data-block ml-3">
                    <% if comment.replies.any? %> 
                        <ul class="post-comments p-0 m-0 mt-3" id="comment-area">
                            <% comment.replies.each do |reply| %> 
                                <%= render partial: 'comments/reply', locals: { comment: reply } %>
                            <% end %>
                        </ul>
                    <% end %>
                </div>
            </div>
        </div>
    </li>
<% end %>
