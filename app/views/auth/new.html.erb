<% provide(:title, t('titles.signin')) %>
<% provide(:form_msg, t('messages.enter_info')) %>
<%= form_for(:session, url: login_path) do |f| %>
    <%= render 'shared/flash_message' %>
    <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, :required => true, class: 'form-control mb-0', placeholder: t('form.email') %>
    </div>
    <div class="form-group">
        <%= f.label :password %>
        <%= link_to t('form.forgot_password'), recover_password_path, class: 'float-right' %>
        <%= f.password_field :password, :required => true, class: 'form-control', placeholder: t('form.password') %>
    </div>
    <div class="d-inline-block w-100">
        <div class="custom-control custom-checkbox d-inline-block mt-2 pt-1">
            <%= f.check_box :remember_me, class: 'custom-control-input' %> 
            <%= f.label :remember_me, class: 'custom-control-label' %>
        </div>
        <%= f.submit t('titles.signin'), class: "btn btn-primary float-right" %>
    </div>
    <div class="sign-info">
        <span class="dark-color d-inline-block line-height-2"><%= t('form.dont_have_account') %> <%= link_to t('titles.signup'), signup_path %></span>
    </div>
<% end %>
<% parent_layout "layouts/base_form" %>
